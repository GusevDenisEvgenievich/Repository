<Window x:Class="pro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pro"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Логин:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox" Width="300" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="300" Margin="0,0,0,15"/>

            <Button Content="Вход" Width="300" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
